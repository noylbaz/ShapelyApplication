<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlonePracticeActivity"
    android:background="@drawable/ic_backround">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/alonpractic_IMV_ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ex1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            >
        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="250dp">

            <TextView
                android:id="@+id/practic_TXT_seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@android:color/white"
                android:textSize="140sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ProgressBar
                android:id="@+id/alone_PRB_timer"
                android:progress="100"
                style="?android:progressBarStyleHorizontal"
                android:progressDrawable="@drawable/circle"
                android:layout_width="match_parent"
                android:max="30"
                android:layout_height="match_parent">
            </ProgressBar>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/alonpractic_BTM_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exit"
            app:cornerRadius="20dp"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="250dp"
            android:layout_gravity="center">

        </com.google.android.material.button.MaterialButton>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/alonpractic_BTM_startNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start new traning"
            app:cornerRadius="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="560dp"
            android:layout_gravity="center">

        </com.google.android.material.button.MaterialButton>





    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>